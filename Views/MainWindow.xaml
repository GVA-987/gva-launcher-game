<Window x:Class="GVA_Launcher_Private.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GVA_Launcher_Private"
        mc:Ignorable="d"
        Title="GVA Launcher" Height="800" Width="1300"
        Background="{StaticResource MainBack}" WindowStartupLocation="CenterScreen">
    
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="{StaticResource SidebarBack}">
            <StackPanel>
                <TextBlock Text="GVA LAUNCHER" Foreground="{StaticResource PrimaryGreen}" 
                           FontSize="22" FontWeight="Bold" Margin="25,40,25,40" Width="200" TextAlignment="Center"/>

                <Button Content="🏠  My Games" Style="{StaticResource MenuButtonStyle}"/>
                <Button Content="☁️  Cloud Sync" Style="{StaticResource MenuButtonStyle}"/>
                <Button Content="⚙️  Settings" Style="{StaticResource MenuButtonStyle}"/>
            </StackPanel>
        </Border>

        <Grid Grid.Column="1">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                <TextBlock Text="Welcome back, Hunter" 
                   Foreground="White" 
                   FontSize="36" 
                   FontWeight="ExtraLight" 
                   HorizontalAlignment="Center"/>
                <TextBlock Text="READY TO START YOUR NEXT ADVENTURE?" 
                   Foreground="{StaticResource PrimaryGreen}" 
                   FontSize="12" 
                   FontWeight="Bold"
                   Margin="0,10,0,0"
                   HorizontalAlignment="Center"
                   Opacity="0.7"/>
                <Button Content ="➕ ADD NEW GAME" Width="250" Height="70" 
                        Margin="0,40,0,0"
                        Style="{StaticResource PrimaryButtonStyle}" 
                        Click="AddGame_Click"/>

            </StackPanel>
        </Grid>
    </Grid>
</Window>
